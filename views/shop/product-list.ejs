<%- include('../includes/head.ejs') %>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <!-- <p>List of all the products...</p> -->
        <% if(prods.length > 0) { %>
        <div class="grid">
            <% prods.forEach((value) => { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= value.title %></h1>
                </header>
                <div class="card__image">
                    <img src="<%= value.imageUrl %>" alt="<%= value.title %>">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$<%= value.price %></h2>
                    <p class="product__description"><%= value.description %></p>
                </div>
                <div class="card__actions">
                    <a href="/products/<%= value.id %>" class="btn">Details</a>
                    <%- include('../includes/add-to-cart.ejs', {product: value}) %>
                </div>
            </article>
            <% }); %>
        </div>
        <% } else { %>
            <center>
                <h1>No Product</h1>
            </center>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>
